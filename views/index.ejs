<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io.connect('http://10.0.1.105:3000');

  socket.on('connect', function() {
  	socket.emit('handshake');
  });

  socket.on('disconnect', function() {
  	socket.emit('dehandshake');
  });

</script>